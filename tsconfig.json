{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["jspdf"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "composite": true, // Ajouté pour cohérence
    "declaration": true, // Générer des fichiers de déclaration au niveau racine si nécessaire
    "outDir": "./dist", // Répertoire de sortie global
    "rootDir": "." // Répertoire racine global
  },
  "include": ["src/**/*"]
}
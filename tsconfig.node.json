{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Composite project settings */
    "composite": true, // Obligatoire pour les projets référencés
    "declaration": true, // Générer des fichiers de déclaration
    "outDir": "./dist", // Répertoire de sortie pour les fichiers compilés
    "rootDir": ".", // Répertoire racine des fichiers sources

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
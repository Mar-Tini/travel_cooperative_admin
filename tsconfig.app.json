{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Composite project settings */
    "composite": true, // Obligatoire pour les projets référencés
    "declaration": true, // Générer des fichiers de déclaration
    "outDir": "./out-tsc/app", // Répertoire de sortie pour les fichiers compilés
    "rootDir": "./src", // Répertoire racine des fichiers sources
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"] // Inclure tous les fichiers dans src et ses sous-dossiers
}